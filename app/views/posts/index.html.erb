<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, formatted_posts_path(:tag => @tag, :format => 'atom')) %><% end -%>

<% if @posts.empty? -%>
  <p>There are no posts yet.</p>
<% else -%>


      <div id="posts">
<% @posts.each do |post| %>
  <div class="post post-<%= post.id %>">
    <%= render :partial => 'post', :locals => {:post => post} %>
  </div>
<% end -%>
</div>
<% end -%>
